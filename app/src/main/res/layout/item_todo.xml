<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_marginBottom="8dp"
    android:background="?android:attr/selectableItemBackground">

    <TextView
        android:id="@+id/textViewTodoTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/checkBoxTodoCompleted"
        android:layout_marginEnd="8dp"
        tools:text="Todo Title" />

    <TextView
        android:id="@+id/textViewTodoDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textAppearance="?attr/textAppearanceListItemSecondary"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewTodoTitle"
        app:layout_constraintEnd_toStartOf="@+id/checkBoxTodoCompleted"
        android:layout_marginEnd="8dp"
        tools:text="Todo Description" />

    <TextView
        android:id="@+id/textViewTodoDueDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="12sp"
        android:textColor="?android:attr/textColorSecondary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewTodoDescription"
        tools:text="Due: YYYY-MM-DD" />

    <TextView
        android:id="@+id/textViewTodoPriority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="12sp"
        android:textColor="?android:attr/textColorSecondary"
        app:layout_constraintStart_toEndOf="@id/textViewTodoDueDate"
        app:layout_constraintTop_toTopOf="@id/textViewTodoDueDate"
        app:layout_constraintBottom_toBottomOf="@id/textViewTodoDueDate"
        tools:text="Priority: High" />

    <CheckBox
        android:id="@+id/checkBoxTodoCompleted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/textViewTodoDescription"
        android:contentDescription="Mark as completed" />

</androidx.constraintlayout.widget.ConstraintLayout>
